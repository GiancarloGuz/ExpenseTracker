<table id="banks" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @banks.each do |bank| %>
      <tr>
        <td><%= bank.id %></td>
        <td><%= bank.buyer_id.nil? ? 'Aun no se sabe ;)' : bank.buyer_id %></td>
        <td>
          <%= link_to '<span class="glyphicon glyphicon-search"></span>'.html_safe,  admin_bank_path(bank), class: "btn btn-primary btn-circle", data: { "toggle" => "tooltip" }, title: "Show" %>
          <%= link_to '<span class="glyphicon glyphicon-pencil"></span>'.html_safe,  edit_admin_bank_path(bank), class: "btn btn-warning btn-circle", data: { "toggle" => "tooltip" }, title: "Edit" %>
          <%= link_to '<span class="glyphicon glyphicon-remove"></span>'.html_safe, admin_bank_path(bank), method: :delete, data: { toggle: "tooltip", confirm: "Estas seguro?" }, title: "Delete", class: "btn btn-danger btn-circle" %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Acciones</th>
    </tr>
  </tfoot>
</table>