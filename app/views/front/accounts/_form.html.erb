<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>Formulario</h5>
      </div>
      <div class="ibox-content">
        <%= nested_form_for([:front, @account], html: {id: "form_account", role: "form", class: "form-horizontal", data: {action: params[:action]}, multipart: true } ) do |f| %>
          <div class="form-group">
            <label class="col-sm-2 control-label">Numero de Cuenta</label>
            <div class="input-group" data-autoclose="true">
              <%= f.text_field :account_number, class: "form-control" %>
            </div>
          </div>
          <div class="hr-line-dashed"></div>
          <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
              <%= link_to "Cancelar", front_accounts_path, class: "btn btn-white" %>
              <%= f.submit "Guardar", data: { disable_with: 'Por favor espere...' }, class: "btn btn-primary", id:"save-btn" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>